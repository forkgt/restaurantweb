<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if IE 9 ]>    <html class="ie9" lang="en"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
<head>
  <meta charset="utf-8" />

  <!-- Uncomment to make IE8 render like IE7 -->
  <!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  <!-- Set the viewport width to device width for mobile -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title>777POS</title>

  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "vendor/modernizr" %>
  <%= csrf_meta_tags %>
</head>

<body>

<div class="row">
  <div class="large-12 columns">
    <nav class="top-bar">
      <ul class="title-area">
        <!-- Title Area -->
        <li class="name">
          <h1><%= link_to "777POS", root_path %></h1>
        </li>
        <li class="toggle-topbar menu-icon"><a href="#"><span>menu</span></a></li>
      </ul>

      <section class="top-bar-section">
        <!-- Right Nav Section -->
        <ul class="right">
          <% if admin_signed_in? %>
              <li class="divider"></li>
              <li><%= link_to current_admin.email, edit_admin_registration_path %></li>
              <li class="divider"></li>
              <li><%= link_to 'Sign out', destroy_admin_session_path, :method=>'delete' %></li>
          <% else %>
              <li class="divider"></li>
              <li><%= link_to "Sign in", new_admin_session_path %></li>
              <li class="divider"></li>
              <li><%= link_to 'Sign up', new_admin_registration_path %></li>
          <% end %>
        </ul>
      </section>
    </nav>
  </div>
  <div class="large-3 columns">
    <br/>
    <ul class="side-nav">
      <li><%= link_to "My Profile", edit_admin_registration_path %></li>
      <% if @store.nil? %>
          <li><%= link_to "Retrieve Store", h_retrieve_store_path %></li>
      <% else %>
          <li><img src="http://placehold.it/400x400&text=<%= @store.name %>"/><br/></li>
          <li class="active"><%= link_to "My Store", store_path(@store) %></li>
          <li><%= link_to "My Statements", store_statements_path(@store) %></li>
          <% if @cartridge_array.include? "menu_manager" %>
              <li><%= link_to "My Menus", store_menus_path(@store) %></li>
              <li><%= link_to "My Dish Choices", store_dish_choices_path(@store) %></li>
              <li><%= link_to "My Dish Features", store_dish_features_path(@store) %></li>
          <% end %>
          <li><%= link_to "My Coupons", store_coupons_path(@store) if @cartridge_array.include? "coupon_manager" %></li>
          <li><%= link_to "My Users", h_user_manager_path if @cartridge_array.include? "user_manager" %></li>
          <li><%= link_to "My Orders", store_orders_path(@store) if @cartridge_array.include? "order_manager" %></li>
          <li><%= link_to "My Payments", store_payments_path(@store) if @cartridge_array.include? "close_manager" %></li>
      <% end %>
    </ul>
  </div>
  <div class="large-9 columns">
    <br/>
    <% flash.each do |name, msg| %>
        <div data-alert class="alert-box round <%= name %>">
          <%= msg %>
        </div>
    <% end %>
    <br/>
    <%= yield %>
  </div>
</div>

<footer class="row">
  <div class="large-12 columns">
    <hr />
    <div class="row">
      <div class="large-6 columns">
        <p>&copy; Copyright no one at all. Go to town.</p>
      </div>
      <div class="large-6 columns">
        <ul class="inline-list right">
          <li><a href="#">Link 1</a></li>
          <li><a href="#">Link 2</a></li>
          <li><a href="#"><%= request.domain %></a></li>
          <li><a href="#"><%= request.host %></a></li>
        </ul>
      </div>
    </div>
  </div>
</footer>

<% if false %>
    <script>
        document.write('<script src=' +
                ('__proto__' in {} ? '<%= asset_path("vendor/zepto") %>' : '<%= asset_path("jquery") %>') +
                '><\/script>');
    </script>

    <script>
        // Ensure rails_ujs works with Zepto
        $.fn.ajaxSend = function(callback) {
            return this.each(function(){
                $(this).on('ajaxBeforeSend', callback);
            });
        };
        var jQuery = $;
    </script>
<% end %>
<%= javascript_include_tag "application" %>
</body>
</html>
