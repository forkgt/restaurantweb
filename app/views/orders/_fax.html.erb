<html>
<body style='font-family:arial;'>

<h1>Invoice #: <%= self.id %></h1>
<p><%= self.store.name %></td></p>

<table>
  <tr>
    <td>
      <p><%= self.created_at.getlocal.to_formatted_s(:short) %><br/></p>
      <p><strong><%= self.cart.delivery_type %></strong><br/><%= self.payment_type + " (" + self.payment_status + ")" %><br/></p>
      <p><strong>Name:</strong><br/><%= self.user.firstname + " " + self.user.lastname %><br/></p>
      <p><strong>Tel:</strong><br/><%= self.user.phone %><br/></p>
      <% unless self.user.address.nil? %>
          <p>
            <strong>Address:</strong><br/>
            <%= self.user.address.address1 + ", " + self.user.address.address2 %><br/>
            <%= self.user.address.city %><br/>
          </p>
      <% end %>
    </td>
    <td>
      <table>
        <tr><th>Menu Item</th><th>Qty.</th><th align='left'>Amt.</th></tr>
        <% self.cart.cart_items.each do |ci| %>
            <tr> <td><%= ci.name %></td><td align='center'><%= ci.quantity %></td><td><%= ci.total_price %></td> </tr>
            <tr> <td colspan='3'> --- <%= ci.note %></td> </tr>
        <% end %>
      </table>
      <p>Tax: <%= number_to_currency self.cart.tax %><br/></p>
      <p>Delivery Fee: <%= number_to_currency self.cart.delivery_fee %><br/></p>
      <p>Tip: <%= number_to_currency self.tip %><br/></p>
      <p>Total: <%= number_to_currency self.cart.total_price + self.tip %><br/></p>
      <p><strong>Note:</strong><%= self.note %></p>
    </td>
  </tr>
</table>

</body>
</html>