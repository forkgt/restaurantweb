<h1>Listing dish_choices</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Bei</th>
      <th>Content</th>
      <th>Input type</th>
      <th>Must</th>
      <th>Store</th>
      <th>Checked</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @dish_choices.each do |dish_choice| %>
      <tr>
        <td><%= dish_choice.name %></td>
        <td><%= dish_choice.bei %></td>
        <td><%= dish_choice.content %></td>
        <td><%= dish_choice.input_type %></td>
        <td><%= dish_choice.must %></td>
        <td><%= dish_choice.store.name %></td>
        <td><%= dish_choice.checked %></td>
        <td>
          <%= link_to icon('file-o'), store_dish_choice_path(@store, dish_choice) %>
          <%= link_to icon('pencil-square-o'), edit_store_dish_choice_path(@store, dish_choice) %>
          <%= link_to icon('trash-o'), [@store, dish_choice], method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to icon('plus'), new_store_dish_choice_path(@store) %>
