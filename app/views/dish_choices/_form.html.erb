<%= simple_form_for(@dish_choice) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :bei %>
    <%= f.input :content %>
    <%= f.input :input_type %>
    <%= f.input :must %>
    <%= f.association :store %>
    <%= f.input :checked %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
