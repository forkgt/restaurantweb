<h1>Listing templates</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Framework</th>
      <th>Rank</th>
      <th>Image</th>
      <th>Price</th>
      <th>Interval</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @templates.each do |template| %>
      <tr>
        <td><%= template.name %>: <%= template.id %></td>
        <td><%= template.framework %></td>
        <td><%= template.rank %></td>
        <td><%= template.image %></td>
        <td><%= template.price %></td>
        <td><%= template.interval %></td>
        <td>
          <%= link_to icon('file-o'), template %>
          <%= link_to icon('pencil-square-o'), edit_template_path(template) %>
          <%= link_to icon('trash-o'), template, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to icon('plus'), new_template_path %>
