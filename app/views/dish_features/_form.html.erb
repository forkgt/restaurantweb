<%= simple_form_for(@dish_feature) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :desc %>
    <%= f.input :rank %>
    <%= f.association :store %>
    <%= image_tag @dish_feature.avatar_url(:small).to_s if @dish_feature.avatar? %>
    <%= f.input :avatar %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
