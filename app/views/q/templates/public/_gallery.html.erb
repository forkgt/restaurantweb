<div class="gallery">
  <div id="gallery_slides">
    <% if @dishes %>
        <% @dishes.each do |d| %>
            <div class="gallery_slide"><%= link_to image_tag d.image_url, width: 960, height: 500, border: 0 %></div>
        <% end %>
    <% end %>
  </div>
  <div id="gallery_menu">
    <ul>
      <li class="gallery_fbar">&nbsp;</li>
      <% if @dishes %>
          <% @dishes.each do |d| %>
              <li class="gallery_menu_item"><%= link_to image_tag d.image_url, width: 58, height: 40 %></li>
          <% end %>
      <% end %>
    </ul>
  </div>
</div>