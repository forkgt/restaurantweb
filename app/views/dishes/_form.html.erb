<%= simple_form_for([@category, @dish]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :desc %>
    <%= f.input :rank %>
    <%= image_tag @dish.avatar_url.to_s, title: @dish.name if @dish.avatar? %>
    <%= f.input :avatar %>
    <%= f.input :price %>
    <%= f.association :dish_features, as: :check_boxes, collection: @category.menu.store.dish_features %>
    <%= f.association :dish_choices, as: :check_boxes, collection: @category.menu.store.dish_choices, item_wrapper_class: 'inline' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
