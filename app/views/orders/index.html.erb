<h5>Today's orders</h5>
<table>
  <thead>
  <tr>
    <th>Time</th>
    <th>Payment</th>
    <th>Total</th>
    <th>Tip</th>
    <th>Note</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @orders_of_today.each do |order| %>
      <tr>
        <td><%= order.created_at.getlocal.to_formatted_s(:short) %></td>
        <td><%= order.payment_type + ", " + order.payment_status %></td>
        <td><%= number_to_currency order.cart.total_price %></td>
        <td><%= number_to_currency order.tip %></td>
        <td><%= order.note %></td>
        <td><%= order.user.firstname + " " + order.user.lastname %></td>
        <td><%= link_to 'S', store_order_path(@store, order) %></td>
        <td><%= link_to 'E', edit_store_order_path(@store, order) %></td>
        <td><%= link_to 'D', [@store, order], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

