<h1>Listing cart_items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Note</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Cart</th>
      <th>Cart itemable</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.name %></td>
        <td><%= cart_item.note %></td>
        <td><%= cart_item.price %></td>
        <td><%= cart_item.quantity %></td>
        <td><%= cart_item.cart %></td>
        <td><%= cart_item.cart_itemable %></td>
        <td><%= link_to 'Show', cart_item %></td>
        <td><%= link_to 'Edit', edit_cart_item_path(cart_item) %></td>
        <td><%= link_to 'Destroy', cart_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

