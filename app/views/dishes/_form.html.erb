<%= simple_form_for([@category, @dish]) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="row">
        <div class="large-6 columns"><%= f.input :name %></div>
        <div class="large-6 columns"><%= f.input :bei, label: "Description" %></div>
        <div class="large-2 columns"><%= f.input :rank if current_admin.feng? %></div>
        <div class="large-2 columns"><%= f.input :price %></div>
        <div class="large-2 columns"><%= image_tag @dish.image_url(:micro).to_s, title: @dish.name if @dish.image? %></div>
        <div class="large-6 columns"><%= f.input :image if current_admin.feng? %></div>
        <hr/>
        <div class="large-3 columns"><%= f.association :dish_features, as: :check_boxes, collection: @store.dish_features %></div>
        <div class="large-3 columns"><%= f.association :dish_choices, as: :check_boxes, collection: @store.dish_choices %></div>
        <div class="large-6 columns">
          <div style="color: #ff0000; font-size: 13px; line-height: 20px;">
            <% @store.dish_choices.each do |dc| %>
                <%= dc.name + " - " + dc.content %><br/>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <hr/>
    <div class="form-actions">
      <%= f.button :submit, class: "button small" %>
    </div>
<% end %>


