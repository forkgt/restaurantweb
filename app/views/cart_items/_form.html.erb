<%= simple_form_for(@cart_item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :note %>
    <%= f.input :price %>
    <%= f.input :quantity %>
    <%= f.association :cart %>
    <%= f.association :cart_itemable %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
